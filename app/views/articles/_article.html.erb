<div class="row">
	<div class="col-xs-6 col-xs-offset-3">
		<% obj.each do |a| %>
			<div class="well well-lg">
				<div class="well-container">
					<div class="well-container-article">
						<div class="well-container-article-body">
							<%= link_to a.title, article_path(a) %>
							&nbsp;
							<%= truncate(a.description, length: 40) %>
						</div>
						<div class="well-container-article-details">
							<small> Author: <%= a.user.username if a.user %> | Created: <%= time_ago_in_words(a.created_at) %> ago | Updated: <%= time_ago_in_words(a.updated_at) %> ago </small>
						</div>
					</div>
					<div class="well-container-btns">
						<%= link_to "Edit", edit_article_path(a), class: "btn btn-xs btn-primary" %>
						&nbsp;
						<%= link_to "Delete", article_path(a), method: :delete,
							data: { confirm: "Are you sure you want to delete this article?"},
							class: "btn btn-xs btn-danger" %>
					</div>
				</div>
			</div>
		<% end %>
	</div>
</div>
