<div class="container">
<h1 align="center">All Articles</h1>
<% @articles.each do |a| %>
	<div class="row">
		<div class="col-xs-6 col-xs-offset-3">
			<div class="well well-lg">
				<div class="all-title">
					<%= link_to a.title, article_path(a) %>
					&nbsp;
					<%= truncate(a.description, length: 40) %>
				</div>
				<div class="all-action-btns">
					<%= link_to "Edit", edit_article_path(a), class: "btn btn-xs btn-primary" %>
					<%= link_to "Delete", article_path(a), method: :delete,
						data: { confirm: "Are you sure you want to delete this article?"},
						class: "btn btn-xs btn-danger" %>
				</div>
			</div>
		</div>
	</div>
<% end %>
</div>
