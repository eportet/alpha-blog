<% obj.each do |user| %>
	<div class="row">
		<div class="well col-xs-8 col-xs-offset-2">
			<div class="container-user">
				<% if user %>
				<div class="container-user-img">
					<%= link_to gravatar_for(user), user_path(user) %>
				</div>
				<div class="container-user-body">
					<div class="container-user-body-username">
						<%= link_to user.username, user_path(user) %>
					</div>
					<div class="ontainer-user-body-details">
						<small><%= pluralize(user.articles.count, "article") if user.articles %></small>
					</div>
				</div>
				<div class="container-user-btns">
					<% if logged_in? && current_user.admin? %>
					<%= link_to "Delete", user_path(user), method: :delete,
						data: { confirm: "Are you sure you want to delete this user and their articles?"},
						class: "btn btn-xs btn-danger" %>
					<% end %>
				</div>
				<% end %>
			</div>
		</div>
	</div>
<% end %>
